# Paperless-ngx Configuration
# --------------------------
# URL of your paperless-ngx instance
PAPERLESS_URL=http://paperless:8000

# API token from paperless-ngx (Settings > Administration > Tokens)
PAPERLESS_TOKEN=your_paperless_token_here


# LiteLLM Configuration
# ---------------------
# URL of your LiteLLM proxy
LITELLM_BASE_URL=http://litellm:4000

# API key for LiteLLM (can be any string if using local LiteLLM)
LITELLM_API_KEY=your_litellm_api_key


# Model Selection (Optional)
# --------------------------
# Model for indexing/entity extraction
INDEXING_MODEL=gpt-5-mini

# Model for user queries
QUERY_MODEL=gpt-5-mini

# Model for text embeddings
EMBEDDING_MODEL=text-embedding-3-small


# GraphRAG Settings (Optional)
# ----------------------------
# Chunk size for text splitting (100-4000)
CHUNK_SIZE=1200

# Chunk overlap (0-500, must be < CHUNK_SIZE)
CHUNK_OVERLAP=100


# Rate Limiting (Optional)
# ------------------------
# Adjust based on your API limits
REQUESTS_PER_MINUTE=60
TOKENS_PER_MINUTE=90000
CONCURRENT_REQUESTS=25
